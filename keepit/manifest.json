{
  "manifest_version": 2,

  "name": "KeepIt",
  "description": "This extension allows saving links to the Keepit.site",
  "version": "3.5", 

  "browser_action": {
    "default_icon": "icon/icon_toolbar.png",
    "default_popup": "html/popup.html"
  },


  "background": {
    "scripts": ["js/background.js"],
    "persistent" : false
  },


  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ]
  
}